<center><h2> Fast Pitch Application </h2></center>

<%= form_for :answers, url: { action: :create } do |f| %>
<% @questions.each do |question| %>
    <%= f.label(question.question_text) %> <br>
  <% if question.closed_question == true  %>
    <%= check_box("answers[#{question.id}]",:answer_text, {}, "yes", "no") %>
  <% else %>
      <%= f.text_area(question.id) %><br>
  <% end %>
  <br>
<% end %>

<div class="form-group"></br>
  <%= f.submit "Submit", class: "btn btn-success" %>
</div>

<% end %>
